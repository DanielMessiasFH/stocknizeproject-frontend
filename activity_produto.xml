<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_bell"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toStartOf="@+id/ll_botoes"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/nome"
                    android:layout_width="246dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Nome"
                    android:textColor="#CFCFCF"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/tipo"
                    android:layout_width="246dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Tipo"
                    android:textColor="#CFCFCF"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/quantidade"
                    android:layout_width="246dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Quantidade"
                    android:textColor="#CFCFCF"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/bell_statusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:layout_centerVertical="true"
                    android:textColor="#444444"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_botoes"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnEditar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:backgroundTint="#9200BBD4"
            app:fabCustomSize="40dp"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/pencil"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnExcluir"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:backgroundTint="#9200BBD4"
            app:fabCustomSize="40dp"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/delete"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="656dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cadastrar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#9200BBD4"
            android:text="@string/cadastrar_produto"
            android:textColor="#FFFFFF" />

    </LinearLayout>
    <TextView
        style="?attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:text="@string/voltar"
        android:textColor="#1E90FF" />
</RelativeLayout>