<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_produto"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#9200BBD4"
        android:text="Produtos"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/btn_movimentacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_movimentacao" />

    <Button
        android:id="@+id/btn_estoque"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="293dp"
        android:backgroundTint="#9200BBD4"
        android:text="Estoque"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_movimentacao" />

    <Button
        android:id="@+id/btn_movimentacao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="73dp"
        android:backgroundTint="#9200BBD4"
        android:text="Movimentações"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btn_estoque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_produto"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_usuario"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="37dp"
        android:backgroundTint="#9200BBD4"
        android:text="Usuários"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_estoque"
        app:layout_constraintTop_toTopOf="@+id/btn_estoque" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="159dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_movimentacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo_stocknize" />

</androidx.constraintlayout.widget.ConstraintLayout>